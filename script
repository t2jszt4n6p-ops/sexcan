$registryPath="HKCU:\Software\Microsoft\Windows\CurrentVersion\Explorer\RunMRU"; if(Test-Path $registryPath){$values=Get-ItemProperty -Path $registryPath;$mruList=$values.MRUList; if($mruList.Length -ge 1){$lastChar=$mruList[-1];Remove-ItemProperty -Path $registryPath -Name $lastChar -ErrorAction SilentlyContinue;$newMruList=$mruList.Substring(0,$mruList.Length-1);Set-ItemProperty -Path $registryPath -Name "MRUList" -Value $newMruList;Write-Host "Son girdi silindi!" -f Green;$restart=Read-Host "Explorer'ı yeniden başlat? (E/H)"; if($restart -match "^[Ee]"){Stop-Process -Name explorer -Force;Start-Process explorer;Write-Host "Explorer yeniden başlatıldı." -f Green}} else {Write-Host "Silinecek girdi yok." -f Yellow}} else {Write-Host "Çalıştır geçmişi bulunamadı." -f Red}
